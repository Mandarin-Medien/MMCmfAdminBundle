{% extends extends_from %}

{% block admin_body_head %}
    <h1>
        Seiten
        <small>Optional description</small>
    </h1>
{% endblock %}

{% block admin_body_content %}
    <div class="box box-default">
        <div class="box-header"><h2 class="box-title">Seite bearbeiten</h2></div>
        <div class="box-body">
            {{ form_start(form) }}

            {% set buttongroup %}
                <div class="form-actions clearfix">
                    {{ form_widget(form.submit) }}
                    {{ form_widget(form.save_and_add) }}
                    {{ form_widget(form.save_and_back) }}

                    <a class="btn btn-warning btn-abort" href="{{ path('mm_cmf_admin_page') }}">
                        <i class="fa fa-close"></i> abbrechen
                    </a>
                </div>
            {% endset %}

            <div class="form-side">
                {{ form_widget(form.visible) }}
            </div>

            <div class="form-main col-xs-8">
                {{ form_rest(form) }}
            </div>

            <div class="form-sub col-xs-4">
                <div class="form-group">
                    <div class="btn-group">
                        <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Neue Route hinzuf√ºgen <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu">
                            <li><a rel="ajax" href="{{ path('mm_cmf_admin_noderoute_new', { node_route_type: 'alias', page: form.vars.data.id }) }}">alias</a></li>
                            <li><a rel="ajax" href="{{ path('mm_cmf_admin_noderoute_new', { node_route_type: 'redirect', page: form.vars.data.id }) }}">redirect</a></li>
                        </ul>
                    </div>
                </div>
                <div class="form-group">
                <div class="list-group">
                {% for route in form.vars.data.routes %}
                        <a class="list-group-item" rel="ajax" href="{{ path('mm_cmf_admin_noderoute_edit', {id: route.id}) }}">
                            {{ route.route }}
                            {% set discr = node_route_factory.getDiscriminatorByClass(route) %}
                            <span class="pull-right label label-{% if discr == 'auto' %}primary{% else %}default{% endif %}">{{ node_route_factory.getDiscriminatorByClass(route) }}</span>
                        </a>
                {% endfor %}
                </div>
                </div>
            </div>

            <div class="col-xs-12">
                {{ form_errors(form) }}
                {{ buttongroup }}
            </div>
            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}

{% block xhr_body %}
    {{ form_start(form) }}

    <div class="form-side">
        {{ form_widget(form.visible) }}
    </div>

    <div class="form-main">
        {{ form_rest(form) }}

        <div class="form-actions">
            {% if form.submit %}{{ form_widget(form.submit) }}{% endif %}
            {% if form.save_and_add %}{{ form_widget(form.save_and_add) }}{% endif %}
            {% if form.save_and_back %}{{ form_widget(form.save_and_back) }}{% endif %}
        </div>
        {{ form_errors(form) }}
    </div>
    {{ form_end(form) }}
{% endblock %}



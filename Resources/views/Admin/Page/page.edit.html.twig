{% extends extends_from %}

{% block admin_body_head %}
    <h1>
        Seiten
        <small>Optional description</small>
    </h1>
{% endblock %}

{% block admin_body_content %}
    <div class="box box-default">
        <div class="box-header"><h2 class="box-title">Seite bearbeiten</h2></div>
        <div class="box-body">
            {{ form_start(form) }}

            <div class="form-side">
                {{ form_widget(form.visible) }}
            </div>

            <div class="form-main">
                {{ form_rest(form) }}
                {{ form_errors(form) }}
            </div>
            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}

{% block xhr_body %}
    {{ form_start(form) }}

    <div class="form-side">
        {{ form_widget(form.visible) }}
    </div>

    <div class="form-main">
        {{ form_rest(form) }}
        {{ form_errors(form) }}
    </div>
    {{ form_end(form) }}
{% endblock %}
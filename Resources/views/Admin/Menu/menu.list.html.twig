{% extends extends_from %}

{% block admin_body_head %}
    <h1>
        Menues
        <small>Optional description</small>
    </h1>
{% endblock %}

{% block admin_body_content %}
    <div class="row">
        <div class="col-xs-12 col-md-8">
            <div class="box box-default ">
                <div class="box-header with-border"><h3 class="box-title"><i class="fa fa-edit"></i> Menues bearbeiten</h3></div>
                <div class="box-body">
                    <table class="table table-responsive">
                        <tbody>
                        {% for menu in menues %}
                            <tr>
                                <td><a href="{{ path('mm_cmf_admin_menu_edit', {'id': menu.id}) }}">{{ menu.name }}</a></td>
                                <td><a href="{{ path('mm_cmf_admin_menu_edit', {'id': menu.id}) }}"><i class="fa fa-edit"></i></a></td>
                                <td><a href="{{ path('mm_cmf_admin_menu_delete', {'id': menu.id}) }}"><i class="fa fa-trash"></i></a></td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="col-xs-12 col-md-4">
            <div class="box box-default">
                <div class="box-header with-border">
                    <h3 class="box-title">
                        <i class="fa fa-plus-circle"></i>
                         Menü hinzufügen
                    </h3>
                </div>
                <div class="box-body">
                    <a class="btn btn-success" href="{{ path('mm_cmf_admin_menu_new') }}">
                        <i class="fa fa-plus"></i>
                        Menü hinzufügen
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}


{% block xhr_body %}
    <table class="table table-responsive">
        <tbody>
        {% for menu in menues %}
            <tr>
                <td><a href="{{ path('mm_cmf_admin_menu_edit', {'id': menu.id}) }}">{{ menu.name }}</a></td>
                <td><a href="{{ path('mm_cmf_admin_menu_edit', {'id': menu.id}) }}"><i class="fa fa-edit"></i></a></td>
                <td><a href="{{ path('mm_cmf_admin_menu_delete', {'id': menu.id}) }}"><i class="fa fa-trash"></i></a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block xhr_footer %}
    <a class="btn btn-success" href="{{ path('mm_cmf_admin_menu_new') }}">
        <i class="fa fa-plus"></i>
        Menü hinzufügen
    </a>
{% endblock %}